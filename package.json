{
  "name": "react-typing-animator",
  "version": "6.0.0",
  "source": "src/index.ts",
  "description": "A React component that animates a given text array into a looping typing animation of each word.",
  "types": "./dist/index.d.ts",
  "main": "./dist/lib.umd.js",
  "module": "./dist/lib.modern.js",
  "scripts": {
    "build": "rm -rf dist/ && microbundle --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react",
    "dev": "microbundle watch --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react",
    "prepublish": "npm run build"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/J3rry320/react-typing-animator.git"
  },
  "keywords": [
    "react",
    "typing",
    "animation",
    "component",
    "react-component",
    "typing-animation",
    "typing-effect",
    "animation",
    "cursor",
    "typescript",
    "nextjs",
    "styled-components",
    "UI animation"
  ],
  "author": "J3rry Sa7pa7hy",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.3.5",
    "microbundle": "^0.15.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
